extends layout
//- Test page to list all items 

block centerBlock
	div.results-list
		h1 Search Results
		-if (typeof(results) === 'undefined' ){
			//-do something
			p No results found
		-}else		
			//-iterate over all the items/users and display them
			ul
				each user, i in results
					li.book-box
						.row
							.col-xs-8.col-md-10
								p.book-title
									a(href="#") #{user.Name}
							.col-md-2
								.book-price-down
									p #{user.Price} $
						.row
							.col-xs-9
								p.book-isbn #{user.Description}
							.col-xs-12.col-sm-3
								a(href="/item/buy/" + user._id )
									.book-buy
										p BUY	

						

	//Adding the css
	link(type='text/css', rel='stylesheet', href='stylesheets/results.css')
	script(type='text/javascript', src="/js/login.js")