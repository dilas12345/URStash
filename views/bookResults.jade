extends layout

block centerBlock
	div.results-list
		h1 Search Results
		-if (typeof(search) === 'undefined' ){
			//-do something
			p No results found
		-}else		
			ul
				each user, i in search
					li.book-box
						.row
							.col-xs-8.col-md-10
								p.book-title
									a(href="/book/" + user.ISBN ) #{user.Name} 
							.col-md-2
								a(href="/book/buy/" + user._id )
									.book-price-down
										p #{user.Price} $

						.row
							.col-sm-9
								p.book-author Author: #{user.Author}
								p.book-isbn ISBN: #{user.ISBN}
							.col-sm-3
								a(href="/book/buy/" + user._id )
									.book-buy
										p BUY
						
						
						

	//Adding the css
	link(type='text/css', rel='stylesheet', href='/stylesheets/results.css')
