html
	head
		title #{title}
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="stylesheet", type="text/css", href="/stylesheets/jquery.fullPage.css")
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')


		link(href='stylesheets/scrolling-nav.css', rel='stylesheet')
		link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
		link(type='text/css', rel='stylesheet', href='/stylesheets/signInUpStyle.css')

	body#page-top(data-spy="scroll" data-target=".navbar-fixed-top")
		#fullpage
			nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
					.container
						.navbar-header.page-scroll
							button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse")
								span.sr-only Toggle navigation
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand.page-scroll(href="/") URStash
						.collapse.navbar-collapse.navbar-ex1-collapse
							ul.nav.navbar-nav#rightTest
								li.hidden
									a.page-scroll(href="#page-top")
								li
									a(href="#search") Search
							ul.navright
								//li
									icon(type="submit" onclick="window.location.href='/'") <i class="fa fa-cubes"></i>		
								li.navright
									a(href='/newItem' title="Sell an Item") <i class="fa fa-money"></i>
								//li 
									button#cartBtn(type="submit" onclick="this.blur(); window.location.href = ''") <i class="fa fa-shopping-cart"></i>
								//li.navright
									a(href='#modal' title="Sign Up") <i class="fa fa-chevron-up"></i>
								//li.navright
									if(user)
										//a(href="/logout") Logout
										a(href='/logout' title="Sign Out") <i class="fa fa-sign-out"></i>
								li.navright
									if(user)
										a(href='/profile' title='Profile') Hey #{user.firstname}
									else
										a(href='/login' title="Sign In") <i class="fa fa-sign-in"></i>
				div#search
					button.close(type="button") x
					form#formSearch(name="search",method="post",action="/search")
						input(type="search" value="" placeholder="Search")
						button.btn.btn-primary#btnsearch(type="submit") Search Books
						button.btn-primary.otherbutton#btnsearch(type="submit") Search Items

				//For the bkg image	
				//img(src="/images/richmond6.jpg" id="bg" alt="") 
				
			block centerBlock

				
	
						
