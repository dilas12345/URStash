html
	head
		title= title
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
		link(href='http://fonts.googleapis.com/css?family=Amaranth', rel='stylesheet', type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Kaushan+Script', rel='stylesheet', type='text/css')
		link(href='stylesheets/scrolling-nav.css' rel='stylesheet')
		link(rel='stylesheet', href='http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
		link(type='text/css', rel='stylesheet', href='/stylesheets/signInUpStyle.css')
				
	body#page-top(data-spy="scroll" data-target=".navbar-fixed-top")
		//For a future Navbar
		nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
			.container
				.navbar-header.page-scroll
					button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand.page-scroll(href="#page-top") URStash
				.collapse.navbar-collapse.navbar-ex1-collapse
					ul.nav.navbar-nav#rightTest
						li.hidden
							a.page-scroll(href="#page-top")
						li
							a(href="#search") Search
					ul.navright
						//li
							icon(type="submit" onclick="window.location.href='/'") <i class="fa fa-cubes"></i>		
						li.navright
							a(href="/" title="Home") <i class="fa fa-home"></i>
						li.navright
							a(href="/newItem" title="Sell an Item") <i class="fa fa-money"></i>
						//li 
							button#cartBtn(type="submit" onclick="this.blur(); window.location.href = ''") <i class="fa fa-shopping-cart"></i>
						//li.navright
							a(href='#modal' title="Sign Up") <i class="fa fa-chevron-up"></i>
						//li.navright
							if(user)
								//a(href="/logout") Logout
								a(href='/logout' title="Sign Out") <i class="fa fa-sign-out"></i>
						li.navright
							if(user)
								p Hey #{user.firstname}
							else
								//a(href="/login") Login
								a(href='/login' title="Sign In") <i class="fa fa-sign-in"></i>
		#search
			button.close(type="button") x
			form(method="post" action="/search")
				input(type="search" value="" placeholder="search for a book" name="searchItem")
				select(name="options")
					option(value="books") Books
					option(value="electronics") Electronics
				button.btn.btn-primary(type="submit") Search
					
		//For the bkg image	
		img( src="/images/richmond.jpg" id="bg" alt="")
		//div.bg_container
		//	<video id="bg" src="page_bg.mp4" autoplay="true" loop="true" muted="true"></video>

		.jumbotron
			h1 URStash - let's stack it.
			p URStash is the key to selling and buying books, electronics, and furniture easily.
			p Sign up, hit search, and we'll connect you.
		
		block content

		section#search1.search-section.hide
			.container
				div.row
					.col-lg-12
						block searchBarBlock
				div.row
					.col-lg-12
						block content
						
