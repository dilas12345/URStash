extends layout

block centerBlock
	.section#sellSection
		.slide
			.container#indexJumbotron
				h1 Sell a Book
				p Wanna sell some other  
					a(href="") item?
			
				div.col-sm-12#booksOptions
					form#formAddUser(name="addItem",method="post",action="/addItem")
						
						input.form-control.input-elements#inputName(type="text", placeholder="Name", name="bookname" required)
						br
						br
							
						div#divDescription.row
						
						div#hideThis(hidden)
							input#inputAuthor(type="text", placeholder="Author", name="bookauthor" readonly)
							br
							input#inputISBN(type="text", placeholder="ISBN", name="bookisbn" readonly)
							br
						div.row
							select.form-control.input-elements#inputCondition( placeholder="Condition", name="bookcondition" form="addItem" required)
								option(value="" default)  Condition
								option(value="5") 5
								option(value="4") 4
								option(value="3") 3
								option(value="2") 2
								option(value="1") 1
						br
						br
						div.row
							input.form-control.input-elements#inputPrice(type="number", placeholder="Price", name="bookprice" required)
						br
						button#btnSearch.btn-primary(type="submit") Sell
						

		.slide
			.container#indexJumbotron
				h1 Sell an Item
				p Electronics or Furniture
				div.col-sm-12#enfOptions
					form#formAddUser(name="addItem",method="post",action="/addENF")
						input#inputNameENF.form-control.input-elements(type="text", placeholder="Item Name", name="enfname" required)
						input#inputDescENF.form-control.input-elements(type="text", placeholder="Item Description (Optional)", name="enfdescription")
						
						//div.row
							|Condition
							input#inputCondition(type="range", placeholder="Condition", name="enfcondition" min=1 max=5 value=5 required)
						br
						br
						div.row
							input.form-control.input-elements#inputPrice(type="number", placeholder="Price", name="enfprice" required)
						br
						button#btnSearch.btn-primary(type="submit") Sell

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>	
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.js"></script>
	<script src="./autocomplete.js"></script>	